<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_sign_up"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.hw7_siddhant.ProfileFragment">


    <Button
    android:text="Update"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/buttonUpdateProfile"
    android:layout_alignBaseline="@+id/buttonCancelProfileUpdate"
    android:layout_alignBottom="@+id/buttonCancelProfileUpdate"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="57dp"
    android:layout_marginEnd="57dp" />

    <ImageView
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:id="@+id/imageViewProfileUpdate"
    android:tag="profile"
        app:srcCompat="?android:attr/actionModeSelectAllDrawable"
    android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/buttonUpdateProfile"
        android:layout_toStartOf="@+id/buttonUpdateProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_label"
        android:id="@+id/textView4"
        android:ems="10"
        android:layout_above="@+id/imageViewProfileUpdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCancelProfileUpdate"
        android:layout_below="@+id/imageViewProfileUpdate"
        android:layout_toLeftOf="@+id/imageViewProfileUpdate"
        android:layout_toStartOf="@+id/imageViewProfileUpdate"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextProfileUpdateFistName"
        android:hint="First Name"
        android:layout_above="@+id/editTextProfileUpdateLastName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextProfileUpdateLastName"
        android:hint="Last Name"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/editTextProfileUpdateFistName"
        android:layout_alignStart="@+id/editTextProfileUpdateFistName" />
</RelativeLayout>