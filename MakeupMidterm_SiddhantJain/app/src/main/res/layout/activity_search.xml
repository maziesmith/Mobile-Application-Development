<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.makeupmidterm_siddhantjain.SearchActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:id="@+id/editTextSearch_Search"
        android:hint="City, State" />

    <Button
        android:text="Places Visited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlacesVisited_Search"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editTextSearch_Search"
        android:layout_alignStart="@+id/editTextSearch_Search"
        android:layout_alignRight="@+id/editTextSearch_Search"
        android:layout_alignEnd="@+id/editTextSearch_Search" />

    <Button
        android:text="Favorite Cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFavCities_Search"
        android:layout_above="@+id/buttonPlacesVisited_Search"
        android:layout_alignLeft="@+id/buttonPlacesVisited_Search"
        android:layout_alignStart="@+id/buttonPlacesVisited_Search"
        android:layout_alignRight="@+id/buttonPlacesVisited_Search"
        android:layout_alignEnd="@+id/buttonPlacesVisited_Search" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlacesVisited_Search"
        android:layout_marginTop="26dp"
        android:id="@+id/buttonLogout_Search"
        android:layout_alignLeft="@+id/buttonPlacesVisited_Search"
        android:layout_alignStart="@+id/buttonPlacesVisited_Search"
        android:layout_alignRight="@+id/buttonPlacesVisited_Search"
        android:layout_alignEnd="@+id/buttonPlacesVisited_Search" />

    <Button
        android:text="Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGo_Search"
        android:layout_alignTop="@+id/editTextSearch_Search"
        android:layout_toRightOf="@+id/editTextSearch_Search"
        android:layout_toEndOf="@+id/editTextSearch_Search" />
</RelativeLayout>
