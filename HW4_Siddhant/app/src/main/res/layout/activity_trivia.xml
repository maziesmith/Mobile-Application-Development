<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hw4_siddhant.TriviaActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/Q1"
        android:id="@+id/textViewQ1"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/Time_left"
        android:id="@+id/textViewTimeLeft"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:textStyle="bold"
        android:layout_above="@+id/imageViewImage"
        android:layout_alignRight="@+id/buttonQuit"
        android:layout_alignEnd="@+id/buttonQuit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:id="@+id/textViewTime"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textViewSeconds"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/textViewSeconds" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/Seconds"
        android:id="@+id/textViewSeconds"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:layout_alignTop="@+id/textViewTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageViewImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewQ1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Question_text"
        android:id="@+id/textViewQuestionText"
        android:layout_below="@+id/imageViewImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="78dp"
        android:layout_alignRight="@+id/imageViewImage"
        android:layout_alignEnd="@+id/imageViewImage" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textViewQuestionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/RadioGroup"></RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonQuit"
        android:layout_below="@+id/RadioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Next"
        android:id="@+id/buttonNext"
        android:layout_alignBottom="@+id/buttonQuit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
