<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hw4_siddhant.TriviaActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:id="@+id/textViewQ1"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/Time_left"
        android:id="@+id/textViewTimeLeft"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewTime"
        android:layout_toStartOf="@+id/textViewTime"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:id="@+id/textViewTime"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewSeconds"
        android:layout_toStartOf="@+id/textViewSeconds"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/Seconds_label"
        android:id="@+id/textViewSeconds"
        android:background="@color/accent_material_dark"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:layout_alignTop="@+id/textViewTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageViewImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewQ1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewQuestionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageViewImage"
        android:layout_alignEnd="@+id/imageViewImage"
        android:layout_below="@+id/imageViewImage" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textViewQuestionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/RadioGroupChoices"
        android:layout_above="@+id/buttonQuit"></RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Quit_label"
        android:id="@+id/buttonQuit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Next_label"
        android:id="@+id/buttonNext"
        android:layout_alignBottom="@+id/buttonQuit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
