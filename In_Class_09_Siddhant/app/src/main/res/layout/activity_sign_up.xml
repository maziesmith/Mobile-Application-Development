<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.in_class_09_siddhant.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SignUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:id="@+id/textViewSignUp" />

    <Button
        android:text="SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonCancel"
        android:layout_alignRight="@+id/editTextPasswordSignup"
        android:layout_alignEnd="@+id/editTextPasswordSignup"
        android:id="@+id/buttonSignUpSignUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:hint="First Name"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:isScrollContainer="false"
        android:includeFontPadding="false"
        android:keepScreenOn="false"
        android:backgroundTint="@android:color/black"
        android:id="@+id/editTextFirstName"
        android:layout_below="@+id/textViewSignUp"
        android:layout_alignLeft="@+id/editTextEmailSignUp"
        android:layout_alignStart="@+id/editTextEmailSignUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:hint="Last Name"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:isScrollContainer="false"
        android:includeFontPadding="false"
        android:keepScreenOn="false"
        android:backgroundTint="@android:color/black"
        android:id="@+id/editTextLastName"
        android:layout_below="@+id/editTextFirstName"
        android:layout_alignLeft="@+id/editTextFirstName"
        android:layout_alignStart="@+id/editTextFirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:hint="Email"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:isScrollContainer="false"
        android:includeFontPadding="false"
        android:keepScreenOn="false"
        android:backgroundTint="@android:color/black"
        android:id="@+id/editTextEmailSignUp"
        android:layout_below="@+id/editTextLastName"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:id="@+id/buttonCancel"
        android:layout_below="@+id/editTextPasswordSignup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:isScrollContainer="false"
        android:includeFontPadding="false"
        android:keepScreenOn="false"
        android:backgroundTint="@android:color/black"
        android:id="@+id/editTextConfirsmPassowrd"
        android:layout_below="@+id/editTextPasswordSignup"
        android:layout_alignLeft="@+id/editTextPasswordSignup"
        android:layout_alignStart="@+id/editTextPasswordSignup"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Choose Password"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:isScrollContainer="false"
        android:includeFontPadding="false"
        android:keepScreenOn="false"
        android:backgroundTint="@android:color/black"
        android:id="@+id/editTextPasswordSignup"
        android:layout_below="@+id/editTextEmailSignUp"
        android:layout_alignLeft="@+id/editTextEmailSignUp"
        android:layout_alignStart="@+id/editTextEmailSignUp" />
</RelativeLayout>
